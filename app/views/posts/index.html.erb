<%= render 'login_status' %>
<ul>
    <% @posts.each do |post| %>
        <li>
            <%= link_to post.title, post %>
            <% if user_signed_in? %>
                <div><%= post.user.username %></div>
            <% end %>
        </li>
    <% end %>
</ul>
<%= link_to 'Create post', new_post_path %>
<% if user_signed_in? %>
    <%= button_to 'Sign out', destroy_user_session_path, method: :delete %>
<% else %>
    <%= link_to 'Login/Sign up', user_session_path %>
<% end %>